<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SelectScoreActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/one_point_button"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="27dp"
        android:textSize="30sp"
        android:text="@string/points_scored" />

    <Button
        android:id="@+id/one_point_button"
        android:layout_width="100sp"
        android:layout_height="100sp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_margin="9dp"
        android:background="@drawable/circle"
        android:textSize="30dp"
        android:text="@string/one_point" />

    <Button
        android:id="@+id/two_point_button"
        android:layout_width="100sp"
        android:layout_height="100sp"
        android:layout_below="@+id/one_point_button"
        android:layout_centerHorizontal="true"
        android:layout_margin="9dp"
        android:background="@drawable/circle"
        android:textSize="30dp"
        android:text="@string/two_point" />

    <Button
        android:id="@+id/three_point_button"
        android:layout_width="100sp"
        android:layout_height="100sp"
        android:layout_below="@+id/two_point_button"
        android:layout_centerHorizontal="true"
        android:layout_margin="9dp"
        android:background="@drawable/circle"
        android:textSize="30dp"
        android:text="@string/three_point" />

    <Button
        android:id="@+id/cancelButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Cancel" />

</RelativeLayout>