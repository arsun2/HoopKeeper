<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SelectScoreActivity">

    <Button
        android:id="@+id/one_point_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/two_point_button"
        android:layout_alignLeft="@+id/two_point_button"
        android:layout_alignStart="@+id/two_point_button"
        android:layout_marginBottom="15dp"

        android:text="1" />

    <Button
        android:id="@+id/two_point_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/three_point_button"
        android:layout_alignLeft="@+id/three_point_button"
        android:layout_alignStart="@+id/three_point_button"
        android:layout_marginBottom="19dp"
        android:text="2" />

    <Button
        android:id="@+id/three_point_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="180dp"
        android:text="3" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/one_point_button"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="61dp"
        android:textSize="30dp"
        android:text="Points Scored:" />

</RelativeLayout>