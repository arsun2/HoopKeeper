<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SelectScoreActivity"
    android:weightSum="3">

    <Button
        android:id="@+id/three_point_button"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="5dp"
        android:layout_weight="1"
        android:layout_gravity="fill_vertical"
        android:gravity="center"
        android:textSize="50sp"
        android:background="@drawable/button_main"
        android:fontFamily="sans-serif-medium"
        android:textColor="#ffffff"
        android:text="@string/three_point" />

    <Button
        android:id="@+id/two_point_button"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="5dp"
        android:layout_weight="1"
        android:layout_gravity="fill_vertical"
        android:gravity="center"
        android:textSize="50sp"
        android:background="@drawable/button_main"
        android:fontFamily="sans-serif-medium"
        android:textColor="#ffffff"
        android:text="@string/two_point" />

    <Button
        android:id="@+id/one_point_button"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="fill_vertical"
        android:gravity="center"
        android:textSize="50sp"
        android:background="@drawable/button_main"
        android:fontFamily="sans-serif-medium"
        android:textColor="#ffffff"
        android:text="@string/one_point" />

</LinearLayout>