<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activity_main"
    android:paddingTop="5dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp" >

    <TextView
        android:id="@+id/quarterNumber"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:textSize="18dp"
        android:textColor="#000000" />


    <TextView
        android:id="@+id/myTeamName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/quarterNumber"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:text="CURRENT PLAYER STAT"
        android:textColor="#000000"
        android:textSize="24dp"
        android:fontFamily="sans-serif-medium"
        android:letterSpacing="0.04" />


    <View
        android:id="@+id/horizontal_bar"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_below="@+id/myTeamName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="18dp"
        android:background="#000000" />

    <View
        android:id="@+id/seperateLine1"
        android:layout_width="274dp"
        android:layout_height="3dp"
        android:layout_below="@id/myTeamName"
        android:layout_marginTop="50dp"
        android:background="#39a197"
        android:layout_centerInParent="true"/>


    <TextView
        android:id="@+id/ScoreButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/seperateLine1"
        android:layout_alignLeft="@id/seperateLine1"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="12dp"
        android:textSize="30dp"
        android:text="PTS"
        android:textColor="#39a197"/>

    <View
        android:id="@+id/seperateLine2"
        android:layout_width="274dp"
        android:layout_height="3dp"
        android:layout_below="@id/ScoreButton"
        android:layout_marginTop="12dp"
        android:background="#39a197"
        android:layout_centerInParent="true"/>


    <TextView
        android:id="@+id/ReboundButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ScoreButton"
        android:layout_below="@+id/seperateLine2"
        android:layout_marginTop="12dp"
        android:text="REB"
        android:textSize="30dp"
        android:textColor="#39a197" />

    <View
        android:id="@+id/seperateLine3"
        android:layout_width="274dp"
        android:layout_height="3dp"
        android:layout_below="@id/ReboundButton"
        android:layout_marginTop="12dp"
        android:background="#39a197"
        android:layout_centerInParent="true"/>


    <TextView
        android:id="@+id/FoulButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ReboundButton"
        android:layout_below="@+id/seperateLine3"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="10dp"
        android:text="PF"
        android:textSize="30dp"
        android:textColor="#39a197"/>

    <View
        android:id="@+id/seperateLine4"
        android:layout_width="274dp"
        android:layout_height="3dp"
        android:layout_below="@id/FoulButton"
        android:layout_marginTop="12dp"
        android:background="#39a197"
        android:layout_centerInParent="true"/>

    <TextView
        android:id="@+id/TurnoverButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/FoulButton"
        android:layout_below="@+id/seperateLine4"
        android:layout_marginTop="12dp"
        android:text="TO"
        android:textSize="30dp"
        android:textColor="#39a197"/>

    <View
        android:id="@+id/seperateLine5"
        android:layout_width="274dp"
        android:layout_height="3dp"
        android:layout_below="@id/TurnoverButton"
        android:layout_marginTop="12dp"
        android:background="#39a197"
        android:layout_centerInParent="true"/>

    <TextView
        android:id="@+id/PlayerPoints"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/seperateLine1"
        android:layout_below="@id/seperateLine1"
        android:layout_marginRight="50dp"
        android:layout_marginTop="12dp"
        android:text="@string/zero"
        android:textSize="30dp"
        android:textColor="#39a197"/>

    <TextView
        android:id="@+id/PlayerRebounds"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/PlayerPoints"
        android:layout_below="@id/seperateLine2"
        android:layout_marginTop="12dp"
        android:text="@string/zero"
        android:textSize="30dp"
        android:textColor="#39a197" />

    <TextView
        android:id="@+id/PlayerFouls"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/PlayerPoints"
        android:layout_below="@id/seperateLine3"
        android:layout_marginTop="12dp"
        android:text="@string/zero"
        android:textSize="30dp"
        android:textColor="#39a197"/>

    <TextView
        android:id="@+id/PlayerTurnovers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/PlayerPoints"
        android:layout_below="@id/seperateLine4"
        android:layout_marginTop="12dp"
        android:text="@string/zero"
        android:textSize="30dp"
        android:textColor="#39a197" />


</RelativeLayout>

