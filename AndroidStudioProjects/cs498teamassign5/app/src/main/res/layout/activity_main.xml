<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp" >

    <EditText
        android:id="@+id/editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:inputType="textPersonName"
        android:gravity="center_horizontal"
        android:text="Q1" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/editText"
        android:layout_marginLeft="45dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="16dp"
        android:text="Warriors" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView"
        android:layout_alignBottom="@+id/textView"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="45dp"
        android:layout_marginRight="45dp"
        android:text="Warriors" />

    <EditText
        android:id="@+id/editText3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_marginEnd="62dp"
        android:layout_marginRight="62dp"
        android:layout_toLeftOf="@+id/textView2"
        android:layout_toStartOf="@+id/textView2"
        android:ems="10"
        android:inputType="textPersonName"
        android:gravity="center_horizontal"
        android:text="50" />

    <EditText
        android:id="@+id/editText4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_marginLeft="83dp"
        android:layout_marginStart="83dp"
        android:layout_toEndOf="@+id/textView"
        android:layout_toRightOf="@+id/textView"
        android:ems="10"
        android:inputType="textPersonName"
        android:gravity="center_horizontal"
        android:text="49" />

    <Button
        android:id="@+id/add_score_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText3"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#00FFFF"
        android:text="Point" />

    <Button
        android:id="@+id/miss_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/add_score_button"
        android:layout_alignStart="@+id/add_score_button"
        android:layout_below="@+id/add_score_button"
        android:backgroundTint="#FF0000"
        android:layout_marginTop="27dp"
        android:text="Miss" />

    <Button
        android:id="@+id/rebound_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/miss_button"
        android:layout_alignStart="@+id/miss_button"
        android:layout_below="@+id/miss_button"
        android:backgroundTint="#00FFFF"
        android:layout_marginTop="27dp"
        android:text="Rebound" />
    <View
        android:layout_width="1dp"
        android:layout_height="200dp"
        android:layout_below="@+id/editText3"
        android:background="#FF0000FF"
        android:id="@+id/view" />

    <View
        android:layout_width="1dp"
        android:layout_height="100dp"
        android:layout_below="@+id/editText4"
        android:layout_alignRight="@+id/editText4"
        android:background="#FF0000FF"
        android:id="@+id/view2" />

    <Button
        android:id="@+id/steal_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/rebound_button"
        android:layout_alignStart="@+id/rebound_button"
        android:layout_below="@+id/rebound_button"
        android:backgroundTint="#00FFFF"
        android:layout_marginTop="26dp"
        android:text="Steal" />

    <Button
        android:id="@+id/foul_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/steal_button"
        android:layout_alignStart="@+id/steal_button"
        android:layout_below="@+id/steal_button"
        android:backgroundTint="#00FFFF"
        android:layout_marginTop="22dp"
        android:text="Foul" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button4"
        android:layout_toLeftOf="@+id/editText"
        android:layout_toStartOf="@+id/editText"
        android:text="Miss 2PT" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3"
        android:layout_below="@+id/button2"
        android:text="Make 1PT" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView7"
        android:layout_alignLeft="@+id/textView6"
        android:layout_alignStart="@+id/textView6"
        android:text="Miss 3PT" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3"
        android:layout_below="@+id/editText3"
        android:text="Foul" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/view2"
        android:layout_toEndOf="@+id/editText"
        android:layout_toRightOf="@+id/editText"
        android:text="Rebound" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button2"
        android:layout_alignLeft="@+id/textView7"
        android:layout_alignStart="@+id/textView7"
        android:text="Miss 2PT" />

    <Button
        android:id="@+id/add_event_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:text="Add Event"/>


</RelativeLayout>